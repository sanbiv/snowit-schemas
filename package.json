{
  "name": "@snowit/schemas",
  "homepage": "https://snowitexperience.com",
  "version": "0.0.2",
  "main": "dist/index.js",
  "types": "dist.index.d.ts",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "publish": "npm --registry https://snowit.bytesafe.dev/r/default publish --access restricted '@snowit/schemas'",
    "cm": "git-cz",
    "lint": "yarn lint:js && yarn lint:ts",
    "lint:js": "yarn eslint '{src}/**/*.js'",
    "lint:ts": "yarn tslint --project tsconfig.json --config tslint.json",
    "lint:fix:js": "yarn eslint --fix '{src}/**/*.js'",
    "lint:fix:ts": "yarn tslint --config tslint.json --fix --project tsconfig.json",
    "build": "yarn tsc -p tsconfig.json",
    "build:watch": "yarn tsc -p tsconfig.json --watch",
    "clean": "rm -rf lib",
    "prepare": "yarn clean && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org:snowitdev/schemas.git"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "lodash": "^4.17.15",
    "uuid": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build"
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@types/eslint": "^4.16.6",
    "@types/eslint-scope": "^3.7.0",
    "@types/eslint-visitor-keys": "^1.0.0",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.6.9",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "cli-confirm": "^1.0.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^4.2.3",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.18.2",
    "ts-node-dev": "^1.0.0-pre.41",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintIgnore": [
    "node_modules/*",
    "list/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
